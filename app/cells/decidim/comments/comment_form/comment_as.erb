<div class="comment__as">
  <% if Decidim::Privacy.anonymity_enabled && current_user.anonymous? %>
    <div class="help-text"><%= t("anonymous_user", scope: "decidim.anonymous.help", resource: "comment") %></div>
  <% end %>

  <label class="mt-4 mr-2 inline-block" for="<%= comment_as_id %>">
    <%= t("decidim.components.add_comment_form.form.user_group_id.label") %>
  </label>
  <select class="p-2" id="<%= comment_as_id %>" name="comment[user_group_id]">
    <% comment_as_options.each do |option| %>
      <option value="<%= option[1] %>"><%= option[0] %></option>
    <% end %>
  </select>
</div>
